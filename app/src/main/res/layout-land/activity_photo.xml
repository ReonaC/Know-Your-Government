<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="592dp"
        android:layout_height="wrap_content"
        android:id="@+id/photoActBannerText"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:background="@color/colorPurpal"
        tools:layout_editor_absoluteX="0dp"
        android:textColor="@color/colorWhite"/>

    <android.support.constraint.ConstraintLayout
        android:layout_height="294dp"
        app:layout_constraintTop_toBottomOf="@+id/photoActBannerText"
        app:layout_constraintRight_toRightOf="parent"
        android:scrollbars="vertical"
        android:id="@+id/phtActContraint"
        android:layout_width="593dp">

        <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:id="@+id/paOfcialInfoText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp" />

        <ImageView
            android:id="@+id/paImgView"
            android:layout_width="226dp"
            android:scaleType="center"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            android:layout_height="201dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>